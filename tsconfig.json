{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@hooks/*": ["hooks/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
		// "noUnusedLocals": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__tests__/index.test.js"],
	"exclude": ["node_modules"]
}
